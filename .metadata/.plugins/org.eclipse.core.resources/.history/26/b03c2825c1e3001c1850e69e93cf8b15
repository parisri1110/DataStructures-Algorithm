package com.sorting;

public class HoarePartition {

	public static void main(String[] args) {
int arr[] = new int[]{10,80,30,90,40,50,70};
        
        int n = arr.length;
        iPartition(arr,0,n-1);
        
	    for(int x: arr)
	        System.out.print(x+" ");

	}

	private static void iPartition(int[] arr, int l, int h) {
		// TODO Auto-generated method stub
		int pivot=arr[l];
		int i=l-1, j=h+1;
		while(true)
		{
			do {
				i++;
			}while(arr[i]<pivot);
			do {
				j--;
			}while(arr[j]>pivot);
			if(i>=j)
				return j;
			int temp=arr[i];
			arr[i]=arr[j];
			arr[j]=temp;
		}
		
	}

}
